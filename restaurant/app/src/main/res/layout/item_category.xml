<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="data"
            type="com.inlocal.restaurantapp.ui.categorylist.model.CateListModel" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_3sdp">

        <com.inlocal.restaurantapp.custom.PoppinsRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@{data.selected?@drawable/blue_assigned_bg:@drawable/black_assigned_bg}"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:paddingVertical="@dimen/_4sdp"
            android:text="@{data.name}"
            android:textColor="@color/white"
            android:textSize="@dimen/_9ssp" />
    </LinearLayout>
</layout>